@{
    ViewData["Title"] = "Decrypt";
}
<h1>Расшифровать</h1>

<!DOCTYPE HTML>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<title>Контактная форма</title>
<style>
    textarea {
        width: 100%;
        border-radius: 2px;
        height: 150px;
    }

    #decrypt-form {
        max-width: 100%;
        padding: 2%;
        border-radius: 3px;
        background: #f1f1f1;
    }

        #decrypt-form label {
            float: left;
            display: block;
            clear: right;
        }

        #decrypt-form .w100 {
            float: right;
            max-width: 80%;
            width: 97%;
            margin-bottom: 1em;
            padding: 1.5%;
        }

        #decrypt-form .border {
            border-radius: 1px;
            border-width: 1px;
            border-style: solid;
            border-color: #C0C0C0 #D9D9D9 #D9D9D9;
            box-shadow: 0 1px 1px rgba(255,255,255,.5), 0 1px 1px rgba(0,0,0,.1) inset;
        }

            #decrypt-form .border:focus {
                outline: none;
                border-color: #abd9f1 #bfe3f7 #bfe3f7;
            }

            #decrypt-form .border:hover {
                border-color: #7eb4ea #97cdea #97cdea;
            }

            #decrypt-form .border:focus::-moz-placeholder {
                color: transparent;
            }

            #decrypt-form .border:focus::-webkit-input-placeholder {
                color: transparent;
            }

            #decrypt-form .border:not(:focus):not(:hover):valid {
                opacity: .8;
            }

    #submitDF {
        padding: 2%;
        border: none;
        border-radius: 3px;
        box-shadow: 0 0 0 1px rgba(0,0,0,.2) inset;
        background: #669acc;
        color: #fff;
    }
     #download {
        border:none;
        border-radius: 3px;
        box-shadow: 0 0 0 1px rgba(0,0,0,.2) inset;
        background: #669acc;
        color: #fff;
        width: 100%;
        height:43px;
    }

    #decrypt-form br {
        height: 0;
        clear: both;
    }

    #submitDF:hover {
        background: #5c90c2;
    }

    #submitDF:focus {
        box-shadow: 0 1px 1px #fff, inset 0 1px 2px rgba(0,0,0,.8), inset 0 -1px 0 rgba(0,0,0,.05);
    }
</style>

    

<form enctype="multipart/form-data" method="post" id="decrypt-form" asp-action="Decrypt" asp-controller="Decrypt">
    <label for="keyDF">Ключ:</label>
    <input type="text" name="keyDF" id="keyDF" required placeholder="Например, Скорпион" x-autocompletetype="Key" class="w100 border">
    <label for="fileDF">Прикрепить файл:</label>
    <input type="file" name="fileDF" multiple id="fileDF" class="w100">
    <label for="textDF">Текст:</label>
    <textarea name="textDF" id="textDF" required rows="5" placeholder="Текст для дешифровки" class="w100 border"> </textarea>
    <br>
    <input value="Расшифровать" type="submit" id="submitDF">
    
</form>
@{ 
    if (DecrypteModel.Text != "")
    {
    <form method="post" asp-action="Download" asp-controller="Download">
        <input value="Скачать" type="submit" id="download">
    </form>
    }
}

<form enctype="multipart/form-data" method="post" id="decrypt-form" asp-action="Decrypt" asp-controller="Decrypt">
    <textarea name="dec_text">@DecrypteModel.Text</textarea>
</form>
